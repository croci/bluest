import setuptools
import subprocess
import os

os.environ["CXX"]="g++"
os.environ["CC"]="g++"

with open("README.md", "r", encoding="utf-8") as fh:
    long_description = fh.read()

#try:
#    from pybind11.setup_helpers import Pybind11Extension,build_ext
